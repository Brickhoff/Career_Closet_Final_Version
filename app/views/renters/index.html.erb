<h1>Rental system</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= search_form_for @q_renters do |f| %>
        <%= f.label :suit_appid_cont, "Suit App. ID:" %>
        <%= f.search_field :suit_appid_cont, class: 'form-control' %><br>
        <%= f.label :user_uin_cont, "Customer UIN:" %>
        <%= f.search_field :user_uin_cont, class: 'form-control' %><br>
        <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<p>
    <%= link_to "Rent a suit", 'renters/new', {:class => "btn btn-default"} %>
</p>


<%= will_paginate %>

<%= content_tag :table, class: 'table' do %>
  <%= content_tag :thead, display_renter_sorted_column_headers(@q_renters), nil, false  %>
  <%= content_tag :tbody, display_renter_sorted_search_results(@renters), nil, false  %>
<% end %>

<%= will_paginate %>


