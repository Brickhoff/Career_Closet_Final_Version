<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Texas A&M University Career Closet", '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",  '/home'  %></li>
        <li><%= link_to "Help",   '/help' %></li>
        
        <% if admin_logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Admin <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_admin %></li>
              <li><%= link_to "Settings", edit_admin_path(current_admin) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", adminlogout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Management <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Customers", users_path %></li>
              <li><%= link_to "Suits", suits_path %></li>
              <li><%= link_to "Appointments", appointments_path %></li>
              <li><%= link_to "Rent Suit", renters_path %></li>
            </ul>
          </li>
        <% elsif user_logged_in? %>
          <li><%= link_to "Appointments", appointments_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Admin", adminlogin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>