<h1>Showing selected appointment</h1>

<table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Slot</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @appointment.time.strftime("%Y/%m/%d") %></td>
        <td><%= @appointment.slot %></td>
      </tr>
    </tbody>
</table>

<center>
    <div class="btn-group">
        <%= link_to 'Edit', edit_appointment_path, {:class => "btn btn-default"}  %>
        <%= link_to 'Back', appointments_path, {:class => "btn btn-default"}  %>
    </div>
</center>