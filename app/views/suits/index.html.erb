
<h1>Suits inventory</h1>
<p><%= link_to 'Back to Homepage', root_path %></p>
<p>
    <%= link_to "Add new suits", new_suit_path %>
</p>


<div>
<%= search_form_for @search do |f| %>
  <%= f.label :appid %>
  <%= f.search_field :appid_cont %>
  <%= f.submit %>
<% end %>
</div>


<div>
&nbsp;
</div>

<div>
<%= will_paginate %>
<%= content_tag :table, class: 'table' do %>
   <%= content_tag :thead, display_suit_sorted_column_headers(@search), nil, false %>
   <%= content_tag :tbody, display_suit_sorted_search_results(@suits), nil, false %>
<% end %>
<%= will_paginate %>
</div>

<p>
    <%= link_to "Back to Inventory", suits_path %>
</p>