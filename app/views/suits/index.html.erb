
<h1>Listing all suits</h1>
<p><%= link_to 'Back to Homepage', root_path %></p>
<p>
    <%= link_to "Add new suits", new_suit_path %>
</p>

<table>
    <tr>
        <th>App. ID</th>
        <th>Gender</th>
        <th>Article</th>
        <th>Size</th>
        <!-- <th>User</th> -->
        <th>Renter</th>
    </tr>
    
    <% @suit.each do |suit|%>
    <tr>
        <td><%= suit.appid %></td>
        <td><%= suit.gender %></td>
        <td><%= suit.article %></td>
        <td><%= suit.size %></td>
        <td><%= link_to "Show", suit_path(suit) %></td>
        <td><%= link_to "Edit",edit_suit_path(suit) %></td>
        <td><%= link_to "Delete", suit_path(suit), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
</table>